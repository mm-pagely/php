RUN set -eux; \
	apk add --no-cache --virtual .build-deps \
		gcc \
		musl-dev \
		make \
	; \
	cd /tmp; \
	curl -fsSL -o unit.tar.gz "https://unit.nginx.org/download/unit-1.17.0.tar.gz"; \
	mkdir unit; \
	tar xzf unit.tar.gz -C "unit" --strip-components=1; \
	cd unit; \
	./configure \
		--prefix=/usr \
		--state=/var/lib/unit \
		--control=unix:/run/control.unit.sock \
		--pid=/run/unit.pid \
	; \
	./configure php; \
	make; \
	make install; \
	rm -rf /tmp/unit; \
	\
	apk del --no-network .build-deps; \
	\
	unitd --version

CMD ["unitd", "--no-daemon"]